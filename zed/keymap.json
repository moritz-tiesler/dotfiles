// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",

    "bindings": {
      "space space": "file_finder::Toggle",
      "space tab": "tab_switcher::Toggle"
    }
  },
  {
      "context": "TabSwitcher",
      "use_key_equivalents": true,
      "bindings": {
        "tab": "menu::SelectPrevious",
        "k": "menu::SelectPrevious",
        "j": "menu::SelectNext",
        "d": "tab_switcher::CloseSelectedItem"
      }
  },
  
  {
    "context": "Workspace",
    "bindings": {
      "cmd-shift-j": "terminal_panel::ToggleFocus",
      "ctrl-cmd-j": "workspace::OpenInTerminal"
    }
  },

  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-shift-j": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      "space g g": [
        "task::Spawn",
        {
          "task_name": "lazygit",
          "reveal_target": "center"
	}
      ],
      "space g l": [
        "task::Spawn",
        {
          "task_name": "golangci-lint",
          "reveal_target": "center"
        }
      ],
      // [
      //   "task::Spawn", {"task_name": "lazygit"},
      // ],
      "space g t":  "go_to_line::Toggle"

    }
  },
  {
      "context": "Editor && vim_mode == visual && !menu",
      "bindings": {
        "v": "editor::SelectLargerSyntaxNode",
        "V": "editor::SelectSmallerSyntaxNode"
      }
    }
]
